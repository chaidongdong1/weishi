/* pages/addaddress/addaddress.wxss */
.active{
	width: 96%;
	height: auto;
	margin: 0 2%;
}
.active-a1{
	width: auto;
	height: 90rpx;
	border-bottom:1px solid #f1f1f1;
	padding: 0 20rpx;
	display: flex;
}
.active-a1>view:first-child image{
	width: 40rpx;
	height: 40rpx;
	padding: 25rpx 0;
}
.active-a1>view:nth-child(2){
	width: 180rpx;
	height: 100%;
	line-height: 90rpx;
	font-size: 36rpx;
	color: #38434d;
	display: flex;
	padding-left: 25rpx;
	justify-content: space-between;
}
.active-a1>view:last-child input{
	flex: 1;
	font-size: 36rpx;
	color: #555;
	height: 90rpx;
	line-height: 90rpx;
}
.picker{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	font-size: 36rpx;
	color: #555;
}
.active-button{
	width: 80%;
	height: 80rpx;
	line-height: 80rpx;
	background: linear-gradient(to right, #85d3ff, #2fa7fd);
	margin: 70rpx 10%;
	font-size: 36rpx;
	color: #fff;
	text-align: center;
	border-radius: 50rpx;
}
.active-button image{
	width: 30rpx;
	height: 25rpx;
	line-height: 80rpx;
	padding-left: 15rpx;
}
/*详细地址*/
.add-xq{
	width: 100%;
	height: auto;
	margin-top: 30rpx;
}
.add-xq-top{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	display: flex;
	font-size: 36rpx;
	color: #555;
}
.add-xq-top image{
	width: 40rpx;
	height: 40rpx;
	padding: 22rpx 20rpx;
}
.add-xq view:last-child textarea{
	width: 96%;
	height: 210rpx;
	padding: 15rpx 2%;
	font-size: 36rpx;
	color: #666;
	line-height: 52rpx;
	background-color: #f9f9f9;
	box-shadow: 0 0 10rpx #eee;
}
.add-mr{
	width: auto;
	height: 50rpx;
	line-height: 50rpx;
	margin-left: 20rpx;
	margin-top: 20rpx;
	font-size: 36rpx;
	color: #333;
}