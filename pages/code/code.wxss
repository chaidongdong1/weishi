/* pages/code/code.wxss */
.code{
	width: 100%;
	height: 100vh;
	background: linear-gradient(to bottom, #85d3ff, #2fa7fd);
}
.code-tui{
	font-size: 42rpx;
	color: #fff;
	text-align:center;
	padding-top: 220rpx;
}
.code-tp{
	width:100%;
	height: auto;
	position: relative;
	padding-top: 10%;
}
.code-tp>image:first-child{
	width: 360rpx;
	height: 360rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-left: -180rpx;
	border-radius: 60rpx;
	box-shadow: 0 0 10rpx #ddd;
}
.code-tp>view:last-child{
	width: 170rpx;
	height: 170rpx;
	position: absolute;
	top: 135rpx;
	left: 290rpx;
	border-radius: 50%;
	overflow: hidden;
}
.code-wz{
	margin-top: 380rpx;
	text-align: center;
	font-size: 36rpx;
	color: #fff;
}
.code-tx{
	width: 96%;
	height: 120rpx;
	margin: 120rpx 2% 0 2%;
	background-color: #fff;
	border-radius: 20rpx;
	display: flex;
	justify-content: space-between;
}
.code-tx>view:first-child{
	font-size: 36rpx;
	color: #333;
	line-height: 120rpx;
	padding-left: 20rpx;
}
.code-tx>view:first-child text{
	font-size: 40rpx;
	color: #e8380d;
}
.code-tx>view:last-child{	
	width: 200rpx;
	height: 80rpx;
	margin: 20rpx 30rpx;
	background-color: #34a9fd;
	line-height: 80rpx;
	text-align: center;
	font-size: 34rpx;
	color: #fff;
	border-radius: 40rpx;
}
.code-bottom{
	position: fixed;
	bottom: 30rpx;
	left: 50%;
	margin-left: -240rpx;
	font-size: 30rpx;
	color: #fff;
}
/*弹窗*/
.mask {
  position: fixed;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, .6);
  z-index: 9999;
  top: 0;
  left: 0;
  transition: all ease .6s;
}
.return-deposit {
  position: fixed;
  width: 96%;
  height: 800rpx;
  background-color: #fff;
  z-index: 10000;
  border-radius: 20rpx;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: 80rpx auto 0;
  transition: all ease-in-out .4s;
}

.img-wapper {
  width: 85%;
  height: auto;
  margin: 0 auto 10rpx;
  font-size: 36rpx;
  color: #333;
  padding-left: 40rpx;
  line-height: 54rpx;
}
.f11-zhu{
	font-size: 30rpx;
	color: #e8380d;
}

.r-title {
  margin-top: -30rpx;
}

.line {
  height: 1px;
  background-color: #f1f1f1;
  margin: 20rpx 0;
}

.input-wapper {
  width: 92%;
  height: 100rpx;
  border-radius: 10rpx;
  margin: auto;
  margin-bottom: 50rpx;
  border: 2rpx solid #43b1fe;
  background-color: #d5edff;
  box-sizing: border-box;
  font-size: 36rpx;
}

.input-wapper input {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 100rpx;
  color: #000;
}

.btn {
  width: 92%;
  height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 34rpx;
  color: #fff;
  box-shadow: 0 0 12px rgba(0, 0, 0, .15);
  margin: auto;
  margin-bottom: 30rpx;
  background: linear-gradient(to left, #2fa7fd, #85d3ff);
}

.close {
  width: 100%;
  height: 200rpx;
  position: absolute;
  bottom: -200rpx;
  text-align: center;
}
.img-wapper>view:first-child{
	text-align: center;
	font-size: 46rpx;
	color: #000;
	margin: 40rpx 0;
}
.mask-left{
	display: flex;
	font-size: 36rpx;
	color: #333;
}
.mask-left>view:first-child{
	width: 160rpx;
	height: auto;
	display: flex;
	justify-content: space-between;
	font-size: 34rpx;
	color: #666;
}
.mask-left-ed{
	font-size: 40rpx;
	color: #2fa7fd;
}
.mask-left>view:last-child{
	flex: 1;
}