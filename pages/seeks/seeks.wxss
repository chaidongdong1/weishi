/* pages/seeks/seeks.wxss */
.shop{
	width: 96%;
	height: 100%;
	padding: 0 2%;
	background-color: #f6f9fe;
}
.shop-seek{
	width: 100%;
	height: 90rpx;
	padding-top: 30rpx;
	background-color: #31A5F5;
	display: flex;
	justify-content: space-between;
	box-shadow: 0 5rpx 15rpx #eee;
}
.shop-nav{
	width: 65%;
	height: 60rpx;
	line-height: 60rpx;
	margin: 0 15rpx;
	border-radius: 20rpx;
	background-color: #fff;
	position: relative;
	padding-left: 10%;
	font-size: 36rpx;
	color: #9ca6ae;
}
.shop-nav input{
	width: 95%;
	height: 60rpx;
	line-height: 60rpx;
}
.shop-seek>view:last-child button{
	width: 150rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 34rpx;
	color: #fff;
	background-color: #e8380d;
	border-radius: 25rpx;
	margin-right: 15rpx;
}
.shop-nav image{
	width: 30rpx;
	height: 30rpx;
	padding-top: 15rpx;
	position: absolute;
	top: 0rpx;
	left: 20rpx;
	z-index: 9999;
}
/*空页面*/
.seeks{
	width: 100%;
	height: 100vh;
	background-color: #fff;
}
.seek-kong{
	width: 100%;
	height: auto;
	text-align: center;
	font-size: 36rpx;
}
.seek-kong image{
	width: 325rpx;
	height: 330rpx;
	margin: 200rpx auto 50rpx auto;
}
.seek-kong>view:first-child{
	font-size: 38rpx;
	color: #38434d;
}
.seek-kong>view:nth-child(3){
	font-size: 36rpx;
	color: #9ca6ae;
	margin-top: 15rpx;
	text-align: center;
}
.seek-kong>view:nth-child(3) text{
	font-size: 36rpx;
	color: #2fa7fd;
}
.seek-kong>view:last-child{
	font-size: 36rpx;
	color: #9ca6ae;
}
/*内容*/
.shops{
	width: 100%;
	height: auto;
	display: flex;
	justify-content: space-between;
	flex-wrap:wrap;
}
.shops-left{
	width: 48%;
	height: auto;
	margin: 15rpx 0;
	background-color: #fff;
	overflow: hidden;
}
.shop-left-img{
	width: 350rpx;
	height: 340rpx;
}
.shop-left-img image{
	width: 100%;
	height: 100%;
	border-top-left-radius: 10rpx;
	border-top-right-radius: 10rpx;
}
.shop-left-wz{
	font-size: 38rpx;
	color: #666;
	padding: 15rpx;
}
.shop-left-jg{
	padding: 0 15rpx 15rpx 15rpx;
	font-size: 30rpx;
	color: #666;
}
.shop-left-jg text{
	color: #e8380d;
	font-size: 38rpx;
}
.shop-cart{
	width: 100rpx;
	height: 100rpx;
	position: fixed;
	bottom: 30rpx;
	right: 30rpx;
}
.shop-cart view:first-child{
	width: 100%;
	height: 100%;
	position: relative;
}
.shop-cart view:first-child image{
	width: 100%;
	height: 100%;
}
.shop-cart-number{
	position: absolute;
	top:15rpx;
	right: -5rpx;
	width: 40rpx;
	height: 40rpx;
	background-color: #e8380d;
	border-radius: 50%;
	color: #FFF;
	font-size: 36rpx;
	text-align: center;
	line-height: 40rpx;
}
.shop-none{
	font-size: 38rpx;
	color: #999;
	margin: 30rpx 0;
	text-align: center;
}