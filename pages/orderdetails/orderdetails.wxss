/* pages/orderdetails/orderdetails.wxss */
.order{
	width: 100%;
	height: atuo;
}
.close-top{
	width: 96%;
	height: auto;
	padding: 20rpx 2%;
	background-color: #fff;
	display: flex;
	position: relative;
}
.close-top>view:first-child{
	width: 50rpx;
	height: 60rpx;
	margin: 20rpx 20rpx;
}
.close-top>view:first-child>image{
	width: 100%;
	height: 100%;
}
.close-xm{
	flex: 1;
	font-size: 34rpx;
	color: #38434d;
}
.close-xm>view:first-child{
	display: flex;
}
.close-xm>view text{
	color: #444;
	font-size: 36rpx;
}
.close-xm>view:first-child>view:last-child{
	padding-left: 30rpx;
}
.close-hx{
	width: 100%;
	height: 4rpx;
}
.close-hx image{
	width: 100%;
	height: 4rpx;
	display: block;
}
.order-cen-left {
  width: 96%;
  height: auto;
  padding: 20rpx 2%;
  background-color: #fff;
  margin: 20rpx 0;
}
.order-cen-shop {
  width: 100%;
  height: auto;
}

.shop-one {
  width: 100%;
  display: flex;
  font-size: 36rpx;
  color: #333;
}

.shop-one>view:first-child {
  width: 210rpx;
  height: 210rpx;
  padding: 15rpx;
}

.shop-one>view:first-child image {
  width: 210rpx;
  height: 210rpx;
}

.shop-one-title {
  flex: 1;
  height: 60rpx;
  overflow: hidden;
}

.shop-one-color text {
  font-size: 40rpx;
  color: #e8380d;
}

.order-zj {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-top: 1px solid #eee;
  padding-top: 5rpx;
  margin-top: 15rpx;
  font-size: 36rpx;
  color: #333;
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-end;
}

.order-zj text {
  font-size: 40rpx;
  color: #e8380d;
}
.order-dd{
	width: 96%;
	height: auto;
	padding: 20rpx 2%;
	background-color: #fff;
	margin: 20rpx 0;
}
.order-dd view{
	font-size: 34rpx;
	color: #666;
}
.order-dd view text{
	font-size: 36rpx;
	color: #333;
}