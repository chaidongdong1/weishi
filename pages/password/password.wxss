.active{
	width: 96%;
	height: auto;
	margin: 0 2%;
}
.active-a1{
	width: auto;
	height: 90rpx;
	border-bottom:1px solid #f1f1f1;
	padding: 0 20rpx;
	display: flex;
}
/*.active-a1>view:first-child image{
	width: 40rpx;
